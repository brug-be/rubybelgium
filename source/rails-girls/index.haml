%header.header
  .layer
    .container.text-center
      = link_to 'http://www.railsgirls.com' do
        .rectangle
          = image_tag '/assets/images/rails-girls/railsgirls-logo.png', class: 'align-vertical'

      %h1.animated.fadeInUp Rails Girls Brussels
      %h3.header__subtitle
        %p Get excited and make things!


      .social-links
        = link_to 'Follow @RailsGirls_BE', 'https://twitter.com/RailsGirls_BE', class: 'twitter-follow-button', data: {'data-show-count': 'false', 'data-size': 'large'}

        .fb-like{ data: { href: "https://www.facebook.com/RailsGirlsBrussels", 'data-width': '200', 'data-layout': 'button_count', 'data-action': 'like', 'data-show-faces': 'true', 'data-share': 'false'}}

